:root {
}

html {
    height: 100%;
    box-sizing: border-box;
}

body {
    margin: 0;
    height: 100%;
    position: relative;
    // background-color: rgb(90, 90, 90);
}

canvas {
    position: absolute;
    max-width: 100%;
    max-height: 100%;
    display: block;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    background-color: #ffffff;
}
